{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "core-js",
      "node",
      "webpack",
      "simplemde"
    ]
  },
  "exclude": [
    "node_modules",
    "server",
    "no-style"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
